@{
}
@model IEnumerable<Institutes_Managements.Models.Entities.Batch>

@{
    ViewData["Title"] = "Batches";
}

<h2>Batches</h2>
<a asp-action="Create" class="btn btn-success">Create New Batch</a>
<table class="table">
    <thead>
        <tr>
            <th>Batch Name</th>
            <th>Course</th>
            <th>Timing</th>
            <th>Capacity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var batch in Model)
        {
            <tr>
                <td>@batch.BatchName</td>
                <td>@batch.Course?.CourseName</td>
                <td>@batch.BatchTiming</td>
                <td>@batch.Capacity</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@batch.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@batch.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

