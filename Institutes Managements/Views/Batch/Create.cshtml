@{
}
@model Institutes_Managements.Models.Entities.Batch

@{
    ViewData["Title"] = "Create Batch";
}

<h2>Create Batch</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="BatchName"></label>
        <input asp-for="BatchName" class="form-control" />
        <span asp-validation-for="BatchName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CourseId">Select Course</label>
        <select asp-for="CourseId" class="form-control">
            <option value="">--Select Course--</option>
            @foreach (var course in ViewBag.Courses)
            {
                <option value="@course.Id">@course.CourseName</option>
            }
        </select>
        <span asp-validation-for="CourseId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BatchTiming"></label>
        <input asp-for="BatchTiming" class="form-control" />
        <span asp-validation-for="BatchTiming" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Capacity"></label>
        <input asp-for="Capacity" type="number" class="form-control" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
