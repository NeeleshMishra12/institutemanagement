@{
}
@model IEnumerable<Institutes_Managements.Models.Entities.Course>

<h2>Courses</h2>
<a asp-action="CreateCourse">Add New Course</a>
<table>
    <tr>
        <th>Course Name</th>
        <th>Description</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Duration (Weeks)</th>
        <th>Actions</th>
    </tr>
    @foreach (var course in Model)
    {
        <tr>
            <td>@course.CourseName</td>
            <td>@course.Description</td>
            <td>@course.StartDate?.ToShortDateString()</td>
            <td>@course.EndDate?.ToShortDateString()</td>
            <td>@course.DurationWeeks</td>
            <td>
                <a asp-action="EditCourse" asp-route-id="@course.Id">Edit</a>
                <form asp-action="DeleteCourse" asp-route-id="@course.Id" method="post" style="display:inline;">
                    <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>
