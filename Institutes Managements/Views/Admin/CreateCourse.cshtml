@{
}
@model Institutes_Managements.Models.Entities.Course

<h2>Add New Course</h2>
<form asp-action="CreateCourse" method="post">
    <div>
        <label>Course Name:</label>
        <input asp-for="CourseName" />
    </div>
    <div>
        <label>Description:</label>
        <textarea asp-for="Description"></textarea>
    </div>
    <div>
        <label>Start Date:</label>
        <input asp-for="StartDate" type="date" />
    </div>
    <div>
        <label>End Date:</label>
        <input asp-for="EndDate" type="date" />
    </div>
    <div>
        <label>Duration (Weeks):</label>
        <input asp-for="DurationWeeks" type="number" />
    </div>
    <button type="submit">Save</button>
</form>

